doctype html
html(prefix="og:http://ogp.me/ns#")
  //- 共通
  - var siteUrl = 'https://tkmh.me/';
  - var ogTitle = 'ogTitle';
  - var ogDescription = 'ogDescription';
  
  //- meta設定を反映
  block vars
    
  head
    title #{title}
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width,initial-scale=1")
    
    meta(name="keywords", content="#{keywords}")
    meta(name="description", content="#{description}")
      
    meta(property="og:title", content="#{ogTitle}")
    meta(property="og:description", content="#{ogDescription}")
    meta(property="og:url", content="#{siteUrl}")
    meta(property="og:type", content="website")
    meta(property="og:image", content="#{siteUrl}assets/img/ogp.png")
      
    meta(name="twitter:card", content="summary_large_image")
    meta(name="twitter:title", content="#{ogTitle}")
    meta(name="twitter:description", content="#{ogDescription}")
    meta(name="twitter:image", content="#{siteUrl}assets/img/ogp.png")
      
    link(rel="shortcut icon", href="/favicon.ico")
    link(rel="apple-touch-icon", href="apple-touch-icon.png")
    link(rel="stylesheet", media="all", href="/assets/css/common.css", type="text/css")

    //- css block ページ個別のCSS
    block css
      
  body(class="#{bodyClass}")
    div#loading
      div#contents
        block contents
          
    script(src="/assets/js/lib.js", type="text/javascript")
    script(src="/assets/js/common.js", type="text/javascript")

    //- script block ページ個別のJS
    block script
